<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.DeepPurple" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryDeepPurple</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDeepPurple</item>
        <item name="colorAccent">@color/colorAccentDeepPurple</item>

        <item name="buttonStyle">@style/ButtonThemeDeepPurple</item>
        <item name="actionModeStyle">@style/ActionModeDeepPurple</item>
        <item name="actionModeCloseDrawable">@drawable/ic_keyboard_backspace_deep_purple</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background_deep_purple</item>
        <item name="android:alertDialogTheme">@style/alertDialogStyleDeepPurple</item>
        <item name="android:progressBarStyle">@style/ProgressBarStyleDeepPurple</item>
    </style>

    <!-- ActionMode Styles -->
    <style name="ActionModeDeepPurple" parent="Base.Widget.AppCompat.ActionMode">
        <!--<item name="background">@android:color/white</item>-->
        <item name="titleTextStyle">@style/actionModeTitleDeepPurple</item>
    </style>

    <style name="actionModeTitleDeepPurple" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <!--<item name="android:textColor">?android:attr/textColorSecondary</item>-->
        <item name="android:textColor">@color/colorPrimaryDeepPurple</item>
    </style>
    <!-- / -->

    <!-- DeepPurple Buttons Styles -->
    <style name="ButtonThemeDeepPurple" parent="ButtonTheme">
        <item name="android:background">@drawable/button_theme_deep_purple_background</item>
    </style>

    <!-- / -->

    <!-- AlertDialog Styles -->
    <style name="alertDialogStyleDeepPurple" parent="alertDialogStyle">
        <item name="android:windowTitleStyle">@style/DialogWindowTitleDeepPurple</item>
        <item name="android:borderlessButtonStyle">@style/ButtonThemeDeepPurple</item>
    </style>

    <style name="DialogWindowTitleDeepPurple" parent="DialogWindowTitle">
        <item name="android:textColor">@color/colorPrimaryDeepPurple</item>
    </style>
    <!-- / -->

    <!-- ProgressBarStyle-->
    <style name="ProgressBarStyleDeepPurple" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar_deep_purple</item>
    </style>
    <!-- / -->
</resources>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:divider="@drawable/separator"
                android:dividerPadding="6dp"
                android:showDividers="middle">

                <Button
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:text="@string/button_text_more"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:drawableLeft="@drawable/ic_arrange_bring_forward"
                    style="@style/ButtonThemeDefault"/>

                <Button
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:text="@string/button_text_online"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:drawableLeft="@drawable/ic_cisco_webex"
                    style="@style/ButtonThemeDefault" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:adjustViewBounds="true"
                android:divider="@drawable/separator"
                android:dividerPadding="6dp"
                android:showDividers="middle">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_text_music"
                    android:gravity="left|center_vertical"
                    android:drawableLeft="@drawable/ic_music_box"
                    style="@style/ButtonThemeDefault" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:divider="@drawable/separator"
                    android:showDividers="middle">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/button_text_friends"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_account_star_variant"
                        style="@style/ButtonThemeDefault"
                        android:layout_weight="1"
                        android:padding="10dp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/button_text_subscribers"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_account_plus"
                        style="@style/ButtonThemeDefault"
                        android:layout_weight="1"
                        android:padding="10dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:divider="@drawable/separator"
                    android:showDividers="middle">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/button_text_wall"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_google_wallet"
                        style="@style/ButtonThemeDefault"
                        android:layout_weight="1"
                        android:padding="10dp"/>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/button_text_groups"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_account_multiple"
                        style="@style/ButtonThemeDefault"
                        android:layout_weight="1"
                        android:padding="10dp"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_text_photo"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:drawableLeft="@drawable/ic_image"
                    style="@style/ButtonThemeDefault"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_text_video"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:drawableLeft="@drawable/ic_filmstrip"
                    style="@style/ButtonThemeDefault"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_text_documents"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:drawableLeft="@drawable/ic_file_document_box"
                    style="@style/ButtonThemeDefault"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_text_favourites"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:drawableLeft="@drawable/ic_bookmark"
                    style="@style/ButtonThemeDefault"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_text_notes"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:drawableLeft="@drawable/ic_note"
                    android:layout_gravity="start"
                    style="@style/ButtonThemeDefault"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_text_games"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:drawableLeft="@drawable/ic_gamepad_variant"
                    style="@style/ButtonThemeDefault"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_activity_text_title"
                    style="@android:style/TextAppearance.Medium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_activity_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_activity_text_location" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/button_text_exit"
                    style="@style/ButtonProfileThemeExit" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
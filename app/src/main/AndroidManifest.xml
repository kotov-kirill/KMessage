<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kirill.kmessage">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ProfileActivity"
            android:label="@string/title_activity_profile" />
        <activity
            android:name=".Activities.MessagesActivity.MessagesActivity"
            android:label="@string/title_activity_messages"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.FileDialog"
            android:label="@string/title_activity_file_dialog" />
        <activity
            android:name=".Activities.FriendsActivity.FriendsActivity"
            android:label="@string/title_activity_friends"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.AboutActivity"
            android:label="@string/title_activity_about_us"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.SearchActivity.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activities.PhotoActivity.PhotoActivity"
            android:label="@string/title_activity_photo"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
